extends ../templates/template
append config
	- pageTitle= "MIC Games - Team Red";
	- currentPage= "page-interna";

append header
	.c-carousel-internas-header.fixed-margin-top
		.owl-carousel.owl-theme.owl-carousel-internas-header
			.item
				img.img-fluid(src="/img/header/mic-games.jpg")

append main
	main.main-content
		.container.position-relative
			nav
				ol.breadcrumb
					li.breadcrumb-item: a(href="index.html") Inicio
					li.breadcrumb-item: a(href="mic-games.html") MIC Games
					li.breadcrumb-item: a(href="mic-games-captains.html") Captains
					li.breadcrumb-item.active Team Red
			.adorno.adorno-1
				img(src="/img/svg/adorno-1.svg")
		section
			.container.text-center.position-relative
				h1.mt-title.mb-title.font-varsity.text-negro.title-mic-games TEAM RED
			.container.position-relative
				.owl-carousel.owl-theme.owl-carousel-mic-games.ico-loading
					.item(data-hash='2020')
						img.owl-lazy(data-src="./img/mic-games/capitanes/rojo/2020.jpeg")
					.item(data-hash='2019')
						img.owl-lazy(data-src="./img/mic-games/capitanes/rojo/2019.jpg")
					.item(data-hash='2018')
						img.owl-lazy(data-src="./img/mic-games/capitanes/rojo/2018.JPG")
					.item(data-hash='2017')
						img.owl-lazy(data-src="./img/mic-games/capitanes/rojo/2017.JPG")
			.container
				.row
					.col-md-10.offset-md-1
						.owl-carousel.owl-theme.owl-carousel-mic-games-pager-2.owl-dots-mic-games-pager
							.item.item-link.text-center.is-active
								a(href="#2020" data-anio="2020") 2020
							.item.item-link.text-center
								a(href="#2019" data-anio="2019") 2019
							.item.item-link.text-center
								a(href="#2018" data-anio="2018") 2018
							.item.item-link.text-center
								a(href="#2017" data-anio="2017") 2017
			.container
				.text-center.mt-6
					p: img(src="./img/svg/mic-games-logo-rojo.svg" width="230px")
					.equipo-mic.equipo-mic--2020.d-block
						p: strong.text-negro.font-typoslab.h2 Team Red 2020
						ul.list-unstyled
							li Fabiana Morillas García
							li Gabriel Yan Merino
							li Alessandra Castagnino Murgia
							li Salvador Bocanegra Rodríguez

					.equipo-mic.equipo-mic--2019.d-none
						p: strong.text-negro.font-typoslab.h2 Team Red 2019
						ul.list-unstyled
							li Mariana Moreno Watson
							li Paolo Oliveri Masias
							li Luana Contreras Burga
							li Joaquin Valera Aragon
					.equipo-mic.equipo-mic--2018.d-none
						p: strong.text-negro.font-typoslab.h2 Team Red 2018
						ul.list-unstyled
							li Valeria Huamanchumo Bazan
							li Giacomo Fernandez Encomenderos
							li Luciana Moreno Quevedo
							li Kurt Otoya Rivasplata

					.equipo-mic.equipo-mic--2017.d-none
						p: strong.text-negro.font-typoslab.h2 Team Red 2017
						ul.list-unstyled
							li Francesca Pescetto Paredes
							li Giacomo Solari Gonzales de Orbegoso
							li Rafaela Garcia Gonzales de Orbegoso
							li Gianluca Bocanegra Rodríguez



append footer
	include ../includes/footer-v1
