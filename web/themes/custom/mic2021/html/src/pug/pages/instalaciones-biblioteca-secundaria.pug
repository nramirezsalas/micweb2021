extends ../templates/template
append config
	- pageTitle= "Biblioteca";
	- currentPage= "page-interna";

append header
	.c-carousel-internas-header.fixed-margin-top
		.owl-carousel.owl-theme.owl-carousel-internas-header
			.item
				.box-texto.left-0
					h1 Recursos Upper School
				img.img-fluid(src="/img/header/biblioteca.jpg")
				.imagen-capa

append main
	main.main-content.page-biblioteca
		section
			.container.mt-3
				nav
					ol.breadcrumb
						li.breadcrumb-item: a(href="index.html") Inicio
						li.breadcrumb-item: a(href="instalaciones-biblioteca.html") Biblioteca
						li.breadcrumb-item.active Recursos Upper School
			.container.container--content.position-relative
				.bloque-1.p-0
					.adorno-1
						img(src="/img/svg/adorno-1.svg")
				.row
					.col-md-8
						.form-filtro
							form
								.form-group.d-flex.align-items-center
									strong.h4 Selecciona
									select.form-control
										option(selected="selected") GENERALES
										option LANGUAGES
										option INDIVIDUALS AND SOCIETIES
										option SCIENCE
										option MATH
										option TEORÍA DEL CONOCIMIENTO
										option COGNITIVE DEVELOPMENT
										option RECURSOS DE INVESTIGACIÓN

						h2.titulo-filtro GENERALES
						.resultados
							.resultados-item
								.numero: span 1
								.texto
									p: strong Enciclopedia Britannica
									p.d-none.d-md-block: a(href="https://www.britannica.com/" target="_blank") https://www.britannica.com/
									p Enciclopedia Británica es una enciclopedia en línea de conocimiento general en inglés con cientos de miles de artículos objetivos, biografías, videos e imágenes.
									p.d-block.d-md-none.mt-2: a.btn.btn-celeste(href="https://www.britannica.com/" target="_blank") Visitar página
							.resultados-item
								.numero: span 2
								.texto
									p: strong Khan Academy
									p.d-none.d-md-block: a(href="https://es.khanacademy.org" target="_blank") https://es.khanacademy.org
									p Khan Academy ofrece ejercicios de práctica, videos instructivos y un panel de aprendizaje personalizado que permite a los alumnos aprender a su propio ritmo, dentro y fuera del salón de clases. Abordamos las matemáticas, la ciencia, la programación de computadoras, la historia, la historia del arte, la economía y más.
									p.d-block.d-md-none.mt-2: a.btn.btn-celeste(href="https://es.khanacademy.org" target="_blank") Visitar página
							.resultados-item
								.numero: span 3
								.texto
									p: strong IB Webliography
									p.d-none.d-md-block: a(href="https://ibwebliography.ibo.org/Resource" target="_blank") https://ibwebliography.ibo.org/Resource
									p En esta página encontrarán una recopilación de recursos curados y compilados por maestros de colegios del mundo IB, para todas las asignaturas del Programa del Diploma y para el Programa de la Escuela Primaria.
									p.d-block.d-md-none.mt-2: a.btn.btn-celeste(href="https://ibwebliography.ibo.org/Resource" target="_blank") Visitar página


					.col-md-4
						aside.sticky-top
							.bloque-3.bloque-3--sidebar
								.btn-cuadrado.rec-inicial.apagado
									span Recursos
									a.stretched-link(href="instalaciones-biblioteca-inicial.html") Preschool
								.btn-cuadrado.rec-primaria.apagado
									span Recursos
									a.stretched-link(href="instalaciones-biblioteca-primaria.html") Lower School
								.btn-cuadrado.rec-secundaria
									span Recursos
									a.stretched-link(href="instalaciones-biblioteca-secundaria.html") Upper School
								.btn-cuadrado.rec-dp.apagado
									span Motores de
									a.stretched-link(href="instalaciones-biblioteca-dp.html") Búsqueda DP
