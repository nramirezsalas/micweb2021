extends ../templates/template
append config
	- pageTitle= "Admisiones precios";
	- currentPage= "page-interna";

append header
	.c-carousel-internas-header.fixed-margin-top
		.owl-carousel.owl-theme.owl-carousel-internas-header
			.item
				.box-texto.right-0
					h1.text-hide Admisiones precios
				img.img-fluid(src="/img/header/admisiones.jpg")

append main
	main.main-content
		.container.position-relative
			nav
				ol.breadcrumb
					li.breadcrumb-item: a(href="index.html") Inicio
					li.breadcrumb-item: a(href="admisiones.html") Admisiones
					li.breadcrumb-item.active Precios
			.adorno.adorno-1
				img(src="/img/svg/adorno-1.svg")
			.adorno.adorno-12.en-top
				img(src="/img/svg/adorno-12.svg")
		section
			.container.text-center.position-relative
				h1.title-section Precios
			.position-relative
				.container
					.row
						.col-12
							p.text-center Cuota de ingreso 2021: S/.3,000.00
					.row
						.col-12
							.row
								.col-md-4
									.tab-vertical.nav.flex-column(id="tab-proceso" role="tablist" aria-orientation="vertical")
										.nav-item.active(id="tab-1-tab" data-toggle="pill" href="#tab-1" role="tab")
											.btn-cuadrado.rec-inicial.btn-cuadrado--version2 Matrícula y Pensión
										.nav-item.d-none(id="tab-2-tab" data-toggle="pill" href="#tab-2" role="tab")
											.btn-cuadrado.rec-primaria.btn-cuadrado--version2 Pensión <br>escolar
										.nav-item(id="tab-3-tab" data-toggle="pill" href="#tab-3" role="tab")
											.btn-cuadrado.rec-secundaria.btn-cuadrado--version2 Descuentos especiales
								.col-md-8
									.adorno.circulo-azul.en-blog.size-2
									.adorno.circulo-amarillo.en-extracurriculares
									.tab-vertical.tab-content.admision-precios(id="tab-procesoContent")
										.tab-pane.fade.amarillo.show.active(id="tab-1" role="tabpanel")
											h2.subtitle-section Matrícula y Pensión
											.table-responsive
												table.table.table-bordered.table-precios
													thead.bg-amarillo
														tr
															th(scope="col") Nivel
															th.text-center(scope="col") Grado
															th.text-right(scope="col") Costo
													tbody
														tr
															td.align-middle(rowspan="2") PRESCHOOL
															td.text-center 2 años
															td.text-right S/ 360.00
														tr
															td.text-center 3 a 5 años
															td.text-right S/ 500.00
														tr
															td.separacion.bg-amarillo(colspan=3)
														tr
															td.align-middle(rowspan=2) LOWER SCHOOL
															td.text-center G1
															td.text-right S/ 960.00
														tr
															td.text-center G2 a G6
															td.text-right S/ 1,066.00
														tr
															td.separacion.bg-amarillo(colspan=3)
														tr
															td.align-middle UPPER SCHOOL
															td.text-center G7 a G12
															td.text-right S/ 1,066.00
														tr
															td.separacion.bg-amarillo(colspan=3)
											p
											p Derecho de postulación: S/.100.00 (es un pago no reembolsable).
											p Estos costos aplican a la modalidad del servicio "educativo virtual".

										.tab-pane.fade.celeste(id="tab-2" role="tabpanel")
											h2.subtitle-section Pensión escolar
											.table-responsive
												table.table.table-bordered.table-precios
													thead.bg-celeste.text-white
														tr
															th(scope="col") Nivel
															th.text-center(scope="col") Grado
															th.text-right(scope="col") Pensión<br>escolar
															th.text-right(scope="col") Cuota<br>mensual <span class="small">(10)</span>
													tbody
														tr
															td.align-middle(rowspan=2) PRESCHOOL
															td.text-center 2 años
															td.text-right S/ 9000.00
															td.text-right S/ 900.00
														tr
															td.text-center 3 a 5 años
															td.text-right S/ 10,000.00
															td.text-right S/ 1,000.00
														tr
															td.separacion.bg-celeste(colspan=4)
														tr
															td.align-middle(rowspan=2) LOWER SCHOOL
															td.text-center G1
															td.text-right S/ 12,000.00
															td.text-right S/ 1,200.00
														tr
															td.text-center G2 a G6
															td.text-right S/ 13,000.00
															td.text-right S/ 1,300.00
														tr
															td.separacion.bg-celeste(colspan=4)
														tr
															td.align-middle UPPER SCHOOL
															td.text-center G7 a G12
															td.text-right S/ 13,000.00
															td.text-right S/ 1,300.00
														tr
															td.separacion.bg-celeste(colspan=4)


										.tab-pane.fade.rojo(id="tab-3" role="tabpanel")
											h2.subtitle-section Descuentos especiales
											h3.subtitle-section-h3 Descuento familiar
											p MIC otorga apoyo especial a las familias que tengan tres hijos a más matriculados en el colegio. El beneficio otorgado es el descuento del 50% en las cuotas mensuales a pagar por el hermano mayor.
											p.small.text-gris-oscuro * Este descuento no aplica en el pago de la matrícula.
											h3.subtitle-section-h3.mt-5 Descuento oportuno
											p Se otorgará un descuento de S/.50.00 (Cincuenta y 00/100 soles) por cuota mensual cancelada antes de la fecha de vencimiento, de acuerdo al cronograma informado oportunamente por la institución.
											p.small.text-gris-oscuro * Este descuento no aplica en el pago de la matrícula.
				.adorno.adorno-2.en-metodologia-mic
					img(src="/img/svg/adorno-2.svg")
		.c-image-last.mt-0
			.container
				.box-image
					.adorno.adorno-11.en-image-last-3
						img(src="/img/svg/adorno-11.svg")
			.adorno.adorno-2.en-pasch
				img(src="/img/svg/adorno-2.svg")


append footer
	include ../includes/footer-v1
