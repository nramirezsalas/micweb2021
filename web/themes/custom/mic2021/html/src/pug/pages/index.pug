extends ../templates/template
append config
	- pageTitle= "MIC";
	- currentPage= "home";

append header
	.c-carousel-home
		.owl-carousel.owl-theme.owl-carousel-home
			.item
				img.img-fluid(src="/img/slider-1.jpg")
			.item
				img.img-fluid(src="/img/slider-1.jpg")

append main
	main.main-content
		section.s-wearemic
			.container
				h2
					| W<span class="small">E</span> A<span class="small">RE</span> <span class="font-varsity">MIC</span>
				h3 ¡Bienvenidos a MIC!
				p
					| Somos Montessori International College (MIC), una experiencia internacional inspirada en la filosofía Montessori y el enfoque pedagógico del Bachillerato Internacional (IB).
				p
					a.btn.btn-rojo(href="#") Más información

		section.s-niveles
			.container
				h2 Niveles
				.c-carousel-niveles
					.owl-carousel.owl-theme.owl-carousel-niveles.owl-nav-1
						.item.position-relative
							div
								img.img-fluid(src="/img/nivel-preschool.jpg")
							div
								p
									a.stretched-link(href="#") Preschool
									span (2-5 años)
						.item.position-relative
							div
								img.img-fluid(src="/img/nivel-lower-school.jpg")
							div
								p
									a.stretched-link(href="#") Lower School
									span (1-6 grado)
						.item.position-relative
							div
								img.img-fluid(src="/img/nivel-upper-school.jpg")
							div
								p
									a.stretched-link(href="#") Upper School
									span (7-11 grado)
						.item.position-relative
							div
								img.img-fluid(src="/img/nivel-dp.jpg")
							div
								p
									a.stretched-link(href="#") DP
									span (12 grado)

		section.s-instalaciones
			.container
				.col-md-10.offset-md-1
					h2 Instalaciones
					.c-carousel-instalaciones
						.owl-carousel.owl-theme.owl-carousel-instalaciones.owl-nav-1
							.item.position-relative
								div
									img.img-fluid(src="/img/laboratorio.jpg")
								div
									p
										a.stretched-link(href="#") Laboratorio
							.item.position-relative
								div
									img.img-fluid(src="/img/laboratorio.jpg")
								div
									p
										a.stretched-link(href="#") Laboratorio

		section.s-beneficios
			.container
				.row
					.col-md-7
						h2 Beneficios <span class="font-varsity">MIC</span>
						p
							| Nuestros Beneficios MIC están dirigidos a todas las personas que conforman la gran Familia MIC, pues creemos en la importancia de apoyarnos mutuamente.
						p
							a.btn.btn-rojo(href="#") Más información

		section.s-contacto
			.container
				.row
					.col-md-6
						h2 ¿Desea conocer más sobre nosotros?
						h3 Escríbenos
				.row
					.col-md-6
						form
							.form-group.row
								.form-item.col-md-6
									input.form-control(type="text" placeholder="Nombre")
								.form-item.col-md-6
									input.form-control(type="text" placeholder="Apellidos")
							.form-group
								input.form-control(type="text" placeholder="Email")
							.form-group
								input.form-control(type="text" placeholder="Número de celular")
							.form-group
								textarea.form-control(placeholder="Mensaje")
							.form-actions
								input.btn.btn-rojo(type="submit" value="Enviar")

					.col-md-6
						p
							| Mz-A Lote MIC - Urb. Tecsup <br>
							| Distrito Víctor Larco Herrera <br>
							| Trujillo, Perú
							| - <br>
							| Teléfono: (044) 340 000

		section.s-mapa
			iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3949.528283952167!2d-79.04420618562406!3d-8.149407694133947!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91ad3d5b4f718e87%3A0xd8e5713072c596ea!2sMontessori+International+College!5e0!3m2!1ses-419!2spe!4v1520268402828" width="100%" height="500" frameborder="0")

		section.s-equipomic
			.container
				.box
					h2 ¿Te gustaría formar parte del equipo MIC?
					p: a.btn.btn-rojo(href="#") Envíanos tu CV
				.box-image
					img.img-fluid(src="/img/profesoras.jpg")

		include ../includes/footer-home
