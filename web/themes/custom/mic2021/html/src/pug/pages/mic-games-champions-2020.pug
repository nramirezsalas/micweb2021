extends ../templates/template
append config
	- pageTitle= "MIC Games - Champions 2020";
	- currentPage= "page-interna";

append header
	.c-carousel-internas-header.fixed-margin-top
		.owl-carousel.owl-theme.owl-carousel-internas-header
			.item
				img.img-fluid(src="/img/header/mic-games.jpg")

append main
	main.main-content
		.container.position-relative
			nav
				ol.breadcrumb
					li.breadcrumb-item: a(href="index.html") Inicio
					li.breadcrumb-item: a(href="mic-games.html") MIC Games
					li.breadcrumb-item.active MIC Games - Champions 2020
			.adorno.adorno-1
				img(src="/img/svg/adorno-1.svg")
			.adorno.adorno-12.en-top
				img(src="/img/svg/adorno-12.svg")
		section
			.container.text-center.position-relative
				h1.mt-title.mb-title.font-varsity.text-negro.title-mic-games THE 2020 CHAMPIONS
			.position-relative
				.container
					.row
						.col-md-10.offset-md-1
							<iframe width="100%" height="500" src="https://www.youtube.com/embed/_kCp7OleXlU" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					.adorno.circulo-azul.size-2.en-descuentos
				.adorno.adorno-2.en-metodologia-mic
					img(src="/img/svg/adorno-2.svg")
			.container.mt-6.position-relative
				ul.list-unstyled.mic-games-list-link.text-center
					li
						a.is-active(href="mic-games-champions-2020.html") MIC Games 2020 - Team Read
					li
						a(href="mic-games-champions-2019.html") MIC Games 2019 - Team Turquoise
					li
						a(href="mic-games-champions-2018.html") MIC Games 2018 - Team Red
					li
						a(href="mic-games-champions-2017.html") MIC Games 2017 - Team Turquoise
				.adorno.adorno-9.en-mic-games
					img(src="/img/svg/adorno-9.svg")
				.adorno.adorno-10.en-mic-games
					img(src="/img/svg/adorno-10.svg")
				.adorno.circulo-amarillo.en-mic-games
		.c-image-last.mt-0
			.container
			.adorno.adorno-2.en-pasch
				img(src="/img/svg/adorno-2.svg")

append footer
	include ../includes/footer-v1
