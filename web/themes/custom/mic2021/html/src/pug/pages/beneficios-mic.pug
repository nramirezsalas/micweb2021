extends ../templates/template
append config
	- pageTitle= "Beneficios MIC";
	- currentPage= "page-interna";

append header
	.c-carousel-internas-header.fixed-margin-top
		.owl-carousel.owl-theme.owl-carousel-internas-header
			.item
				img.img-fluid(src="/img/header/beneficios.jpg")

append main
	main.main-content
		.container.position-relative
			nav
				ol.breadcrumb
					li.breadcrumb-item: a(href="index.html") Inicio
					li.breadcrumb-item.active Beneficios MIC
			.adorno.adorno-1
				img(src="/img/svg/adorno-1.svg")
		section
			.container.text-center.position-relative
				h1.title-section Beneficios MIC
				p.px-large-2 Nuestros Beneficios MIC est√°n dirigidos a todas las personas que conforman la gran Familia MIC, pues creemos en la importancia de apoyarnos mutuamente.

				.row.mt-7
					.col-md-4.offset-md-2
						.btn-cuadrado.rec-inicial
							img.mb-4(src="/img/svg/ico-monedero.svg" width=70)
							a.stretched-link(href="beneficios-descuentos.html") Descuentos<br>MIC
					.col-md-4
						.btn-cuadrado.rec-primaria
							img.mb-4(src="/img/svg/ico-directorio.svg" width=70)
							a.stretched-link(href="beneficios-directorio.html") The MIC<br>Business<br>Directory

		section.c-image-last.mt-0
			.container
				.box-image.left
					img.img-fluid(src="./img/beneficios-mic.png")

append footer
	include ../includes/footer-v2
